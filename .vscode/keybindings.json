// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+s",
        "command": "workbench.action.files.save"
    },
    {
        "key": "cmd+s",
        "command": "-workbench.action.files.save"
    },
    // START -- Toggle between editor and Terminal
    // https://stackoverflow.com/questions/48511956/toggle-between-fullscreen-editor-and-terminal-in-vs-code
    // Swipe terminal window all the way down when in 
    // editor mode
    {
        "key": "ctrl+alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+alt+m",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    // END -- Toggle between editor and Terminal
    
    // --- START -- Project Manager
    // shift+alt+p does not work in the Terminal
    {
      "key": "ctrl+alt+p",
      "command": "projectManager.listProjects",
    },
    // --- END -- Project Manager
]
