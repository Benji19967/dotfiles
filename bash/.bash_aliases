WORKSPACE=${HOME}/apps/home/labrecqb

# Bash
alias rc="vim ~/.bashrc"
alias src="source ~/.bashrc"
alias rca="vim ~/.bash_aliases"

# Git
alias gd="git diff"
alias s="git status"
alias c="git commit -am "
alias b="git branch"

# ls
alias ls="eza -l"
alias ll="eza -l"
alias lla="eza -la"

# Python
alias poetry=".poetry_venv/bin/poetry"

# General
alias cl="clear"

# Paths
alias ..="cd .."
alias ap="cd $WORKSPACE"
alias dot="vim $WORKSPACE/dotfiles"
alias dotdir="cd $WORKSPACE/dotfiles"

# Neovim
alias vim="~/neovim/build/bin/nvim"
