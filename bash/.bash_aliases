# Bash
alias rc="vim ~/.bashrc"
alias src="source ~/.bashrc"
alias rca="vim ~/.bash_aliases"

# Git
alias gd="git diff"
alias s="git status"
alias c="git commit -am "
alias b="git branch"

# Python
alias poetry=".poetry_venv/bin/poetry"

# General
alias cl="clear"

# Paths
alias ..="cd .."
alias ap="cd $CODE_REPO"
alias dot="vim $CODE_REPO/dotfiles"
alias dotdir="cd $CODE_REPO/dotfiles"
